{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "tag": true
  },
  "github": {
    "release": true,
    "comments": {
      "submit": true
    }
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "after:bump": "npm run build"
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md",
      "addUnreleased": true,
      "addVersionUrl": true
    }
  }
}
